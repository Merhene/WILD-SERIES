{% extends 'base.html.twig' %}
{% block title %}Série #{{ program.title }}{% endblock %}

{% block body %}
    <div class="media">
        <img src="{{ vich_uploader_asset(program) }}" alt="{{ program.title }}">
        <div class="media-body">
            <h1 class="mt-0">{{ program.title }}</h1>
            <p>{{ program.synopsis }}</p>
            <p>Catégorie : {{ program.category.name }}</p>
            <p>Durée: {{programDuration}}</p>
            <h2>Saisons</h2>
            <ul>
                {% for season in program.seasons %}
                <p>{{ season.number }}</p>
                    <li><a href="{{ path('program_season_show', {slug: program.slug, season: season.id}) }}">{{ season.number }}</a></li>
                    {% else %}
                        Aucune série trouvée.
                {% endfor %}
            </ul>
            <strong>Acteurs :</strong>
            <ul>
            {% for actor in program.actors %}
            <li><a href="{{ path("app_actor_show", { id: actor.id }) }}">{{ actor.name }}</a></li>
            {% else %}
            <li>Aucun acteur pour cette série</li>
            {% endfor %}
            </ul>
        </div>
    </div>

    <a href="{{ path('program_index') }}">
    Retour à la liste des programmes
    </a>
{% endblock %}
