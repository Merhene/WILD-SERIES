{% extends 'base.html.twig' %}

{% block title %}{{ actor.name }}{% endblock %}

{% block body %}
    <h1>{{ actor.name }}</h1>
        {# <div class="media">
        <img src="{{ vich_uploader_asset(actor) }}" alt="{{ actor.name }}">
        <div class="media-body"> #}
    <div>
        <strong>Participe aux séries :</strong>
        <ul>
            {% for program in actor.programs %}
                <li><a href="{{ path('program_show', {slug: program.slug}) }}">{{ program.title }}</a></li>
            {% else %}
                <li>Aucune série associée</li>
            {% endfor %}
        </ul>
    </div>

    <a href="{{ path('app_actor_index') }}" class="btn btn-secondary">
        Retour à la liste des acteurs
    </a>
{% endblock %}